<section class="contact-new" id="contact-new">
  <h2 class="heading">CONTACT</h2>
    <%= form_for(@contact, url: confirm_path) do |f| %>
      <div class="form-group">
        <%= f.label :name, '名前*' %>
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :email, 'メールアドレス*' %>
        <%= f.text_field :email, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :subject, '件名*' %>
        <%= f.text_field :subject, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :message, 'メッセージ*' %>
        <%= f.text_area :message, size: '60x10', class: 'form-control' %>
      </div>

      <div>
        <%= f.submit '入力内容確認' %>
      </div>
    <% end %>



