<section class="contact-new" id="contact-new">
  <h2 class="heading">CONTACT</h2>
  <%= form_for @contact do |f| %>
    <form class="contact-form">
      <%= f.label :email, "返信先メールアドレス" %>
      <br/>
      <%= f.text_field :email, placeholder: "emailを入力ください", class:"email-field" %>
      <br/>
      <%= f.label :message, "お問い合わせ内容" %>
      <br/>
      <%= f.text_area :message, placeholder: "お問い合わせ内容をお書きください", class:"message-field" %>
      <br/>
      <%= f.submit "送信", class:"submit" %>
      <br/>
      <%= link_to :back, class:"back" do %>
        戻る
      <% end %>  
    </form>
  <% end %>
</section>